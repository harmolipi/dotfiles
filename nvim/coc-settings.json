{
  // Refer to this link https://github.com/neoclide/coc.nvim/blob/master/data/schema.json
  "diagnostic.level": "hint",
  "diagnostic.errorSign": "",
  "diagnostic.warningSign": "",
  "diagnostic.infoSign": "",
  "diagnostic.hintSign": "",
  "diagnostic.enableMessage": "jump",
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextPrefix": "        ",
  "snippets.extends": {
    "javascript": ["html", "javascript-react"]
  },
  "signature.target": "echo",
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "javascript",
    "graphql",
    "html",
    "yaml",
    "json",
    "python",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  // python
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "~/vim_venv/bin/black",
  // Lua
  "sumneko-lua.enableNvimLuaDev": true,
  "sumneko-lua.checkUpdate": false,
  "Lua.telemetry.enable": false,
  "Lua.window.statusBar": false,
  "Lua.hint.enable": true, //suggest
  "coc.source.around.enable": true, // disables buffer, file and around completion
  "suggest.noselect": true,
  "suggest.formatItems": ["abbr", "kind"],
  "suggest.floatConfig": {
    "border": true,
    "rounded": true,
    "highlight": "CocCustomPopup",
    "borderhighlight": "CocCustomPopupBoder"
  },
  "suggest.completionItemKindLabels": {
    "keyword": "\uf1de",
    "variable": "\ue79b",
    "value": "\uf89f",
    "operator": "\u03a8",
    "function": "\u0192",
    "reference": "\ufa46",
    "constant": "\uf8fe",
    "method": "\uf09a",
    "struct": "\ufb44",
    "class": "\uf0e8",
    "interface": "\uf417",
    "text": "\ue612",
    "enum": "\uf435",
    "enumMember": "\uf02b",
    "module": "\uf40d",
    "color": "\ue22b",
    "property": "\ue624",
    "field": "\uf9be",
    "unit": "\uf475",
    "event": "\ufacd",
    "file": "\uf723",
    "folder": "\uf114",
    "snippet": "\ue60b",
    "typeParameter": "\uf728",
    "default": "\uf29c"
  },
  // Prettier
  "prettier.arrowParens": "always",
  "prettier.singleQuote": true,
  "prettier.jsxSingleQuote": true,
  "prettier.trailingComma": "all",
  // Eslint
  "eslint.enable": true,
  "eslint.format.enable": false
  // Tsserver
}
